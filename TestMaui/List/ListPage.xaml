<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestMaui.List.ListPage"
             Title="ListPage">
    <ListView x:Name="listView" SeparatorColor="Red" SeparatorVisibility="None">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ImageCell ImageSource="{Binding ImageUrl}" Text="{Binding Name}" Detail="{Binding Status}"></ImageCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
</ContentPage>
